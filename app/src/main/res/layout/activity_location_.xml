<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer"
    android:layout_height="match_parent"
    android:background="@drawable/loc_back"
    tools:context=".Location_Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/back_ic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/back_icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/back_ic"
            android:layout_toRightOf="@id/back_ic"
            android:layout_marginTop="25dp"
            android:textColor="#9cc434"
            android:textSize="15dp"
            android:fontFamily="@font/raleway_semibold"
            android:text="@string/location"
            />

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/menu_icon"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/item_yellow"
            />
        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logobig"
            />
        <TextView
            android:id="@+id/loc_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/Orange"
            android:paddingTop="20dp"
            android:textSize="28dp"
            android:text="A M M A N - A B D O U N"
            android:fontFamily="@font/raleway_semibold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_below="@+id/loc_n"
            android:layout_centerHorizontal="true"
            android:textColor="#9cc434"
            android:paddingTop="20dp"
            android:textSize="28dp"
            android:text="0 7 9 5 3 4 7 3 4 1"
            android:fontFamily="@font/raleway_semibold"
            />
        <ImageView
            android:layout_width="600dp"
            android:layout_height="190dp"
            android:layout_centerHorizontal="true"
       android:layout_alignParentBottom="true"
            android:src="@drawable/halfo"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="190dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/logobig"

            />

    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navi_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layoutDirection="rtl"
        app:itemTextAppearance="@style/RobotoTextViewStyle"
        android:background="@drawable/menu_back"
        app:menu="@menu/navi_menu"
        android:paddingTop="100dp"
        app:itemTextColor="@color/DarkGray"

        />

</androidx.drawerlayout.widget.DrawerLayout>