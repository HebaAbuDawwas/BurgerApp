<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer"
    android:layout_height="match_parent"
    android:background="@drawable/confirm_back"
    tools:context=".Confirm_Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/back_ic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/back_icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/back_ic"
            android:layout_toRightOf="@id/back_ic"
            android:layout_marginTop="25dp"
            android:textColor="#9cc434"
            android:textSize="15dp"
            android:fontFamily="@font/raleway_semibold"
            android:text="@string/confirm"
            />

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/menu_icon"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/item_yellow"
            />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/iburgerlogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="230dp"
            />
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="420dp"
            android:textColor="@color/Orange"
            android:fontFamily="@font/raleway_bold"
            android:text="O R D E R\nC O N F I R M E D"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/confirmation"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="110dp"

            />




    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navi_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layoutDirection="rtl"
        app:itemTextAppearance="@style/RobotoTextViewStyle"

        android:background="@drawable/menu_back"
        app:menu="@menu/navi_menu"
        android:paddingTop="100dp"
        app:itemTextColor="@color/DarkGray"

        />

</androidx.drawerlayout.widget.DrawerLayout>